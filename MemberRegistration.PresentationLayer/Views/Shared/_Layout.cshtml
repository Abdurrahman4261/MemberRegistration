<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
   
    <link rel="stylesheet" href="~/Content/css">
    <link rel="stylesheet" href="~/bundles/modernizr">
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans&display=swap" rel="stylesheet"> <!-- https://fonts.google.com/specimen/Kumbh+Sans -->
    <link rel="stylesheet" href="~/tema/fontawesome/css/all.min.css">  <!-- https://fontawesome.com/-->
    <link rel="stylesheet" href="~/tema/css/magnific-popup.css">       <!-- https://dimsemenov.com/plugins/magnific-popup/ -->
    <link rel="stylesheet" href="~/tema/css/bootstrap.min.css">        <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="~/tema/slick/slick.min.css">          <!-- https://kenwheeler.github.io/~/tema/slick/ -->
    <link rel="stylesheet" href="~/tema/slick/slick-theme.css">
    <link rel="stylesheet" href="~/tema/css/templatemo-upright.css">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
</head>
<body>

    <script src="~/tema/js/jquery-3.4.1.min.js"></script>          <!-- https://jquery.com/ -->
    <script src="~/tema/js/jquery.singlePageNav.min.js"></script>  <!-- https://github.com/ChrisWojcik/single-page-nav -->
    <script src="~/tema/js/parallax/parallax.min.js"></script>     <!-- https://pixelcog.github.io/parallax.~/tema/js/ -->
    <script src="~/tema/js/imagesloaded.pkgd.min.js"></script>     <!-- https://imagesloaded.desandro.com/ -->
    <script src="~/tema/js/isotope.pkgd.min.js"></script>          <!-- https://isotope.metafizzy.co/ -->
    <script src="~/tema/js/jquery.magnific-popup.min.js"></script> <!-- https://dimsemenov.com/plugins/magnific-popup/ -->
    <script src="~/tema/slick/slick.min.js"></script>              <!-- https://kenwheeler.github.io/~/tema/slick/ -->
    <script src="~/tema/js/templatemo-script.js"></script>
    <div class="container w-25">
        
        <div id="tm-sidebar" class="tm-sidebar bg-black" style="width:17%">
            <nav class="tm-nav">
                <button class="navbar-toggler" type="button" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div>
                    <ul id="tm-main-nav">
                        <li class="nav-item">
                            <a href="/Home/Index" class="nav-link current">
                                <div class="triangle-right"></div>
                                <i class="fas fa-home nav-icon"></i>
                                HomePage
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/ProfileInfo" class="nav-link">
                                <div class="triangle-right"></div>
                                <i class="fas fa-user-friends nav-icon"></i>
                                My profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Resume/Index" class="nav-link">
                                <div class="triangle-right"></div>
                                <i class="fa fa-book nav-icon" aria-hidden="true"></i>
                                Add resume
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Survey/Index" class="nav-link">
                                <div class="triangle-right"></div>
                                <i class="fa fa-bookmark nav-icon" aria-hidden="true"></i>
                                Survey
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Account/LogOut" class="nav-link">
                                <div class="triangle-right"></div>
                                <i class="fas fa-sign-out-alt nav-icon" aria-hidden="true"></i>
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <div class="container w-50 body-content">
        @RenderBody()

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



